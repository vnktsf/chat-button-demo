  <script>
    // Logging for DOM and button setup
    document.addEventListener('DOMContentLoaded', function() {
      console.log('DOM fully loaded');

      const chatBtn = document.getElementById('chatBtn');
      if (chatBtn) {
        console.log('Chat button found:', chatBtn);
        chatBtn.addEventListener('click', function() {
          console.log('Chat button clicked! Attempting to load chat script...');
          if (typeof loadChatScript === 'function') {
            loadChatScript();
            console.log('loadChatScript() called successfully.');
          } else {
            console.error('loadChatScript() is not defined!');
          }
        });
      } else {
        console.error('Chat button not found in DOM!');
      }
    });
  </script>

